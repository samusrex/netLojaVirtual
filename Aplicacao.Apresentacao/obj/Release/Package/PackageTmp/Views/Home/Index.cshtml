@model IEnumerable<Aplicacao.Loja.Loja.Produto>

@{
    ViewBag.Title = "Index";
}

<h5>Produtos</h5>

<p>
    <a class="btn-floating tooltipped green darken-4 right" data-position="bottom" data-tooltip="Novo" href='@Url.Action("Escolher","Home")'><i class="material-icons">add</i></a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fabricante)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Setor)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fabricante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.Setor)
            </td>
            
        </tr>
    }

</table>
